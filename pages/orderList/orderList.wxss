page,
.page,
.page__bd{
    height: 100%;
    background: #f1f1f1;
    font-family:"微软雅黑";
    font-size: 14px;
}
.page__bd{
    padding-bottom: 0;
}

 
    .navbar{
      flex: none;  
      display: flex;  
      background: #fff;  
      margin-bottom: 10rpx;
      font-size: 14px;
    }  
    .navbar .item{  
      position: relative;  
      flex: auto;  
      text-align: center;  
      line-height: 90rpx;
      font-size: 14px;  
    }  
    .navbar .item.active{  
      color: #c11a29;  
    }  
    .navbar .item.active:after{  
      content: "";  
      display: block;  
      position: absolute;  
      bottom: 0;  
      left: 0;  
      right: 0;  
      height: 4rpx;  
      background: #c11a29;  
    }  

.page-group {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.zhangdan_list{ 
  height:auto; 
  border-radius:8rpx; 
  border:1px solid #f5f5f5; 
  background-color:#FFF; 
  margin-bottom:20rpx;
}

/*编号*/
.order_no{padding: 0 2%;margin: 0 auto;overflow: hidden;height: 45px;line-height: 45px;font-size: 13px;}
.order_no .no{font-size: 13px;}
.status{color: #c11a29;}
/*图片价格*/
.order_img{margin: 0 auto;width: 100%;height: 120px;overflow: hidden;background-color: #f6f5f8;}
 .order_img .img{width: 70%;overflow: hidden;} 
.order_img .img image{float: left;height:100px;width: 100px;margin: 10px 10px 8px;}
.order_img .nameBox{float: left;width: 45%;margin-top: 15px;font-size: 13px;}
.name{width: 100%;}
.color{margin-top: 5px;color: #a2a1a4;}
.price{font-size: 13px;text-align: right;margin-top: 40px;margin-right: 10px;}
.price .price_old{color: #666;text-decoration:line-through;margin-bottom: 5px;}
.price .count{float: right;}
/*总价*/
.order_customer{margin: 0 auto;height: 45px;line-height: 45px;font-size: 13px;text-align: right;}
.price_all{font-size:13px;}
.totalprice{font-size: 14px;}
/*地址*/
.order_address{padding: 10px 2%;overflow: hidden;margin: 0 auto;border-top: 1px solid #f1f1f1;position: relative;}
.order_address image{height: 14px;width: 14px;position:absolute;top: 12px;left: 2%;}
.address{font-size: 13px;margin-left: 20px;color: #999;}
/*电话*/
.order_phone{padding: 10px 2%;overflow: hidden;margin: 0 auto;border-top: 1px solid #f1f1f1;position: relative;}
.order_phone image{height: 14px;width: 14px;position:absolute;top: 12px;left: 2%;}
.tell{font-size: 13px;margin-left: 20px;color: #999;}