/* pages/packet/sendpacket/sendpacket.wxss */
/*头像  */
.iconBox{height: 200rpx;width: 100%;text-align: center;}
.iconBox{position: absolute;top: -100rpx;}
.icon{height: 200rpx;width: 200rpx;margin: 0 auto;border-radius: 103rpx;background-color: #999;border: 6rpx solid #fff;}
.icon image{height: 200rpx;width: 200rpx;}
/*主体内容白色bg  */
.content{background-color: #fff;margin: 140rpx 32rpx;position: relative;}
/*红包类型  */
.typeBox{overflow: hidden;padding-top: 140rpx;width: 90%;margin: 0 auto;}
.type{float: left;width: 25%;font-size: 30rpx;color: #999;text-align: center;}
.active{color: #c11a29;}
/*红包类型对应内容  */
.typeContent{padding: 20rpx 80rpx;}
/*设置问题  */
.question{overflow: hidden;margin: 10rpx 0;}
.question text{float: left;font-size: 32rpx;} 
.question input{float: right;border-bottom: 2rpx solid #ccc;font-size: 30rpx;padding-left: 10rpx;}
/*设置答案  */
.answer{overflow: hidden;}
.answer input{float: right;border-bottom: 2rpx solid #ccc;font-size: 30rpx;padding-left: 10rpx;}
.answer text{float: left;font-size: 32rpx;} 
/*tips  */
.tips{margin: 20rpx 0;font-size: 28rpx;color: #999;text-align: center;}
/*上传图片  */
.previewImgBox{float: left;margin-left: 90rpx;font-size: 30rpx;margin-bottom: 10rpx;border-bottom: 1.9rpx solid #fff;}
.delImg{color: #c11a29;margin-left: 30rpx;font-size: 26rpx;}
/*备注  */
textarea{border: 2rpx solid #ccc;width: 100%;height: 160rpx;margin: 30rpx 0;border-radius: 10rpx;font-size: 28rpx;}
/*服务费  */
.serviceBox{font-size: 28rpx;text-align: center;color: #999;}
.total{color: #c11a29;}
/*生成按钮  */
button{height: 80rpx;background-color: #c11a29;color:#fff;line-height: 80rpx;font-size: 30rpx;border-radius: 40rpx;margin: 20rpx 0;}

/*底部导航  */
.footerBar{width: 100%;padding:10rpx 0;position:fixed;bottom: 0;background-color: #fff;}
.footerBar .bar{float: left;width: 33.3%;text-align: center;}
.footerBar .bar image{height: 50rpx;width: 50rpx;}
.footerBar .bar text{display: block;font-size: 28rpx;color: #999;}
